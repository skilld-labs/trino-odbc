                <File Id='aws_crt_cpp' Name='aws-crt-cpp.dll' DiskId='1' Source='@WIX_ODBC_AWS_CRT_CPP@' KeyPath='yes'/>
            </Component>
	    <Component Id='aws_c_s3' Guid='@WIX_COMPONENT_ID_AWS_C_S3@' Win64='@WIX_COMPONENT_IS_WIN64@'>
