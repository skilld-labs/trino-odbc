PKG_INSTALL_DIR=/Applications/trino-odbc
FINAL_INSTALL_DIR=/Library/ODBC/trino-odbc

# Remove install directory if it already exists
if [ -d "${FINAL_INSTALL_DIR}" ]; then
    # Fail if FINAL_INSTALL_DIR is not set for whatever reason
    if [ -z ${FINAL_INSTALL_DIR} ]; then exit 1; fi
    rm -rf ${FINAL_INSTALL_DIR}
fi

# Move PKG installed folders to intended install directory
mkdir -p ${FINAL_INSTALL_DIR}
mv ${PKG_INSTALL_DIR}/lib ${FINAL_INSTALL_DIR}/lib
mv ${PKG_INSTALL_DIR}/doc ${FINAL_INSTALL_DIR}/doc

ODBCINST_INI=/Library/ODBC/odbcinst.ini
odbc_drivers=`grep "\[ODBC Drivers\]" /Library/ODBC/odbcinst.ini`
INSTALLED=`grep "Amazon Trino ODBC Driver" /Library/ODBC/odbcinst.ini`
if [ -z "${INSTALLED}" ]
then
    if [ -z "${odbc_drivers}" ]
    then 
        echo -e "[ODBC Drivers]" >> $ODBCINST_INI
        echo "Amazon Trino ODBC Driver = Installed" >> $ODBCINST_INI
    else
        sed -i -e "s/\[ODBC Drivers\]/\[ODBC Drivers\]\nAmazon Trino ODBC Driver = Installed/g" $ODBCINST_INI
    fi
    echo -e "\n[Amazon Trino ODBC Driver]" >> $ODBCINST_INI
    echo "Driver = ${FINAL_INSTALL_DIR}/lib/libtrino-odbc.dylib" >> $ODBCINST_INI
    echo "Setup = ${FINAL_INSTALL_DIR}/lib/libtrino-odbc.dylib" >> $ODBCINST_INI
else 
    echo "Amazon Trino ODBC Driver might have been installed, please check $ODBCINST_INI!"
fi
